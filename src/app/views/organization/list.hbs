<section class="section">
  <div class="section-header">
    <h1>Organizações</h1>
  </div>

  <div class="section-body">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <div class="w-100">
              <a href="/organization/create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova
              </a>
            </div>
            <div class="card-header-form">
              <form>
                <div class="input-group">
                  <input type="text" class="form-control" placeholder="Search">
                  <div class="input-group-btn">
                    <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                  </div>
                </div>
              </form>
            </div>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table">
                <thead>
                  <tr>
                    <th></th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Telefone</th>
                    <th>CNPJ</th>
                    <th>Ações</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each data.results}}
                  <tr data-id="{{id}}" organization-row>
                    <td>
                      <img alt="image" src="{{image}}" class="rounded-circle" width="35" data-toggle="tooltip" title="" data-original-title="Wildan Ahdian">
                    </td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{phone}}</td>
                    <td>{{cnpj}}</td>
                    <td>
                      <button class="btn btn-outline-danger" btn-remove>
                        <i class="fas fa-trash"></i>
                      </button>
                      <a href="/organization/edit/{{id}}" class="btn btn-outline-info">
                        <i class="fas fa-edit"></i>
                      </a>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer text-right">
            <nav class="d-inline-block">
              <ul class="pagination mb-0">
                <li class="page-item {{#if (eq pageIndex '0')}}disabled{{/if}}">
                  <a class="page-link" href="/organizations/{{eval pageIndex '-' 1}}/{{pageSize}}" tabindex="-1">
                    <i class="fas fa-chevron-left"></i>
                  </a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="/organizations/{{pageIndex}}/{{pageSize}}">{{eval pageIndex '+' 1}}</a>
                </li>
                <li class="page-item">
                  <a class="page-link" href="/organizations/{{eval pageIndex '+' 1}}/{{pageSize}}">
                    <i class="fas fa-chevron-right"></i>
                  </a>
                </li>
              </ul>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
